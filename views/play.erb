<body>
  <div class="userBar">
    <a href="/dashboard">
      <i class="fa fa-home"></i>
      <span><%= session[:username] %></span>
    </a>
    <form method="post" action="/logout">
      <input type="submit" value="Log Out">
    </form>
  </div>
  <div class="play">
    <h1 class="title">Choose Your Weapon</h1>
    <hr>
    <div class="cf selector">
      <div>
        <a href="/play-move/1" id="rock">
          <img src="styles/rock.svg">
        </a>
      </div>
      <div>
        <a href="/play-move/2" id="paper">
          <img src="styles/paper1.png">
        </a>
      </div>
      <div>
        <a href="/play-move/3" id="scissors">
          <img src="styles/scissors.svg">
        </a>
      </div>
    </div>
    <div class="cf scoreboard">
      <h2 class="small title">Scoreboard</h2>
      <div class="scoreBox">
        <h3 class="tagline"><%= session[:username] %></h3>
      </div>
      <div class="scoreBox">
        <h3 class="tagline">Opponent</h3>
      </div>
    </div>
  </div>
</body>